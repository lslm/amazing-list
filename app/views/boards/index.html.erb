<header class="bg-white shadow">
  <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center">
      <h1 class="text-3xl font-bold text-gray-900">Minhas listas</h1>
      <%= link_to 'Criar nova lista', new_board_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    </div>
  </div>
</header>

<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <ul class="divide-y divide-slate-200 w-full">
    <% @boards.each do |board| %>
      <li>
        <a href=<%= board_path(board) %>>
          <div class="flex py-4 pl-4 hover:bg-slate-100">
            <div class="w-10 h-10 bg-sky-500 rounded-full"></div>
            <div class="ml-3 overflow-hidden">
              <p class="text-sm font-medium text-slate-900"><%= board.description %></p>
              <p class="text-sm text-slate-400"><%= board.items.size %> items</p>
            </div>
          </div>
        </a>
      </li>
    <% end %>
  </ul>
</div>
